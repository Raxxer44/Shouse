@model OrderPageViewModel

<div class="container">
    <h2 class="mt-3">Оформление заказа</h2>
    <form method="post" asp-controller="Order" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label>Имя</label><br />
            <input name="Name" class="form-control" />
            <span asp-validation-for="Model1.Name"></span>
        </div>
        <div>
            <label>Фамилия</label><br />
            <input name="Surname" class="form-control" />
            <span asp-validation-for="Model1.Surname"></span>
        </div>
        <div>
            <label>Отчество</label><br />
            <input name="Patronymic" class="form-control" />
            <span asp-validation-for="Model1.Patronymic"></span>
        </div>
        <div>
            <label>Адрес</label><br />
            <input name="Address" class="form-control" />
            <span asp-validation-for="Model1.Address"></span>
        </div>
        <div>
            <label>Почтовый индекс</label><br />
            <input name="Index" class="form-control" />
            <span asp-validation-for="Model1.Index"></span>
        </div>
        <input style="display: none" value="@Model.Id" name="ProductId"></input>
        <div>
            <input type="submit" class="btn btn-primary mt-2" value="Оформить" />
        </div>
    </form>
</div>